<?xml version="1.0" encoding="UTF-8" ?>
<grammar xmlns="http://www.w3.org/2001/06/grammar" xml:lang="en-US"
         mode="voice" root="ROOT" tag-format="semantics/1.0" version="1.0">
  <rule id="ROOT" scope="public">
    <one-of>
      <item>
        <one-of>
          <item>Hello</item>
          <item>Hi</item>
        </one-of>
        <item repeat="0-1">Cat</item>
        <tag> out.da="InitialGreeting" ; out.prop="Greet" </tag>
      </item>
      <item>
        <item> My name is </item> 
        <item>$$.*</item>
        <tag>out.da="Inform" ; out.prop="Name" ; out.what="$$1" </tag>
      </item>
      <item>
        <item>Tell me about</item>
        <item>$$.*</item>
        <tag>out.da="Request" ; out.prop="Courses" ; out.what="$$1"</tag>
      </item>
      <item>
        <item>How many courses does</item>
        <item>$$.*</item>
        <item>offer? </item>
        <tag>out.da="Request"; out.prop="Department"; out.what="$$1"</tag>
      </item>
    </one-of>
  </rule>
</grammar>
