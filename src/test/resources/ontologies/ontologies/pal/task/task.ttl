# baseURI: http://www.dfki.de/lt/onto/pal/task

@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix task: <http://www.dfki.de/lt/onto/pal/task#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<http://www.dfki.de/lt/onto/pal/task>
  rdf:type owl:Ontology ;
  rdfs:comment "The task/goal ontology for the PAL project (http://www.pal4u.eu/)."^^xsd:string ;
  rdfs:comment "This ontology is based on the ontology for task models as presented by van Welie (2001)."^^xsd:string ;
  owl:versionInfo "Created with TopBraid Composer"^^xsd:string ;
.
task:Agent
  rdf:type owl:Class ;
  rdfs:comment """An agent is an entity that is considered active. Usually agents are humans but groups of humans or software components may also be considered agents. Agents are
not specific individuals (like Chris) but always indicate classes of individuals with certain characteristics. Attributes of the agent can include skills, attitude and other
miscellaneous. Agents perform tasks and always play certain roles within the task world (Welie 98)."""^^xsd:string ;
  rdfs:comment "E.g. Piet Jansen, Marie Jansen"^^xsd:string ;
  rdfs:label "Agent"^^xsd:string ;
  rdfs:subClassOf owl:Thing ;
  rdfs:subClassOf [
      rdf:type owl:Restriction ;
      owl:onProperty task:performs ;
      owl:someValuesFrom task:Task ;
    ] ;
  rdfs:subClassOf [
      rdf:type owl:Restriction ;
      owl:onProperty task:playsRole ;
      owl:someValuesFrom task:Role ;
    ] ;
.
task:Goal
  rdf:type owl:Class ;
  rdfs:comment "A desired state in the task world or of the system. A goal can be reached by one or more tasks."^^xsd:string ;
  rdfs:label "Goal"^^xsd:string ;
  rdfs:subClassOf owl:Thing ;
  rdfs:subClassOf [
      rdf:type owl:Restriction ;
      owl:cardinality "1"^^xsd:nonNegativeInteger ;
      owl:onProperty task:hasStatus ;
    ] ;
.
task:Group
  rdf:type owl:Class ;
  rdfs:comment "A group of agents that can perform a role in the system."^^xsd:string ;
  rdfs:label "Group"^^xsd:string ;
  rdfs:subClassOf owl:Thing ;
  rdfs:subClassOf [
      rdf:type owl:Restriction ;
      owl:onProperty task:playsRole ;
      owl:someValuesFrom task:Role ;
    ] ;
.
task:Object
  rdf:type owl:Class ;
  rdfs:comment """An object refers to a physical or non-physical entity. A non-physical entity could be anything ranging from messages, passwords or addresses to gestures and
stories. Objects have attributes consisting of attribute-name and value pairs. What can be done with an object is specified by actions, for instance move, change, turn off etc. Furthermore, objects may be in a type hierarchy and can also be contained in other objects, for example a form may contain an address field, and a cinema can contain a snack bar. Objects are typically used in tasks but they can also influence the task execution sequence when they cause events to occur."""^^xsd:string ;
  rdfs:label "Object"^^xsd:string ;
  rdfs:subClassOf owl:Thing ;
.
task:Role
  rdf:type owl:Class ;
  rdfs:comment "A role is a meaningful collection of tasks performed by one or more agents. The role is meaningful when it has a clear goal or when it distinguishes between groups of agents. A role is consequently responsible for the tasks that it encompasses. Roles can be hierarchically composed and are assigned to an agent in a certain way. The role can be obtained by assignment, delegation, mandate or because of a situational context."^^xsd:string ;
  rdfs:comment "e.g. Father, Mother"^^xsd:string ;
  rdfs:label "Role"^^xsd:string ;
  rdfs:subClassOf owl:Thing ;
  rdfs:subClassOf [
      rdf:type owl:Restriction ;
      owl:onProperty task:performs ;
      owl:someValuesFrom task:Task ;
    ] ;
.
task:Task
  rdf:type owl:Class ;
  rdfs:comment "A task is an activity performed by agents to reach a certain goal. A task typically changes something in the task world and requires some period of time to complete. Complex tasks can be decomposed into smaller subtasks. Tasks are executed in a certain order and the completion of one task can trigger the execution of one or more other tasks."^^xsd:string ;
  rdfs:label "Task"^^xsd:string ;
  rdfs:subClassOf owl:Thing ;
  rdfs:subClassOf [
      rdf:type owl:Restriction ;
      owl:onProperty task:performedBy ;
      owl:someValuesFrom task:Agent ;
    ] ;
  rdfs:subClassOf [
      rdf:type owl:Restriction ;
      owl:onProperty task:uses ;
      owl:someValuesFrom task:Object ;
    ] ;
.
task:hasDescription
  rdf:type owl:DatatypeProperty ;
  rdfs:label "description"^^xsd:string ;
  rdfs:range xsd:string ;
.
task:hasGoal
  rdf:type owl:ObjectProperty ;
  rdfs:comment "The hasGoal relationship connects tasks to goals. Each task has a goal that defines the reason for performing the task. A goal could be either a personal or business goal."^^xsd:string ;
  rdfs:domain task:Task ;
  rdfs:label "has_goal"^^xsd:string ;
  rdfs:range task:Goal ;
.
task:hasMember
  rdf:type owl:ObjectProperty ;
  rdfs:comment "Describes the fact that a group has individual agents as its members."^^xsd:string ;
  rdfs:domain task:Group ;
  rdfs:label "has_member"^^xsd:string ;
  rdfs:range task:Agent ;
  owl:inverseOf task:isMemberOf ;
.
task:hasStatus
  rdf:type owl:DatatypeProperty ;
  rdfs:comment "Status of the extent to which a certain goal has been achieved."^^xsd:string ;
  rdfs:label "status"^^xsd:string ;
  rdfs:range xsd:string ;
.
task:hasSubGoal
  rdf:type owl:ObjectProperty ;
  rdfs:comment "The subgoal relationship describes the goal decomposition."^^xsd:string ;
  rdfs:domain task:Goal ;
  rdfs:label "has_subgoal"^^xsd:string ;
  rdfs:range task:Goal ;
.
task:hasSubTask
  rdf:type owl:ObjectProperty ;
  rdfs:comment "The subtask relationship describes the task decomposition."^^xsd:string ;
  rdfs:domain task:Task ;
  rdfs:label "has_subtask"^^xsd:string ;
  rdfs:range task:Task ;
.
task:isMemberOf
  rdf:type owl:ObjectProperty ;
  rdfs:comment "Defines the relation between the agent and a group of agents to which it belongs. The group may collectively take on a role to perform a task."^^xsd:string ;
  rdfs:domain task:Agent ;
  rdfs:label "is_member_of"^^xsd:string ;
  rdfs:range task:Group ;
  owl:inverseOf task:hasMember ;
.
task:performedBy
  rdf:type owl:ObjectProperty ;
  rdfs:comment "The relationship performed by specifies that a task is performed by an agent. This does not mean that agent is also the one who is responsible for the task because this depends on his role and the way it was obtained. When it is not relevant to specify the agent that performs the task, a role can also be specified as the performing entity."^^xsd:string ;
  rdfs:domain task:Task ;
  rdfs:label "performed_by"^^xsd:string ;
  rdfs:range task:Agent ;
  rdfs:range task:Role ;
.
task:performs
  rdf:type owl:ObjectProperty ;
  rdfs:comment "The relationship specifies that an agent or an agent or group of agents in a certain role, performs a task."^^xsd:string ;
  rdfs:domain task:Agent ;
  rdfs:domain task:Role ;
  rdfs:label "performs"^^xsd:string ;
  rdfs:range task:Task ;
  owl:inverseOf task:performedBy ;
.
task:playsRole
  rdf:type owl:ObjectProperty ;
  rdfs:comment "Every agent/group should play one or more roles. The plays relationship also indicates how this role was obtained. For instance by delegation, mandate or a socially determined reason."^^xsd:string ;
  rdfs:domain task:Agent ;
  rdfs:domain task:Group ;
  rdfs:label "plays_role"^^xsd:string ;
  rdfs:range task:Role ;
.
task:usedBy
  rdf:type owl:ObjectProperty ;
  rdfs:comment "The used by relationship indicates who used which object and what the agent or role can do with it. The agentsâ€™ rights regarding objects can be of existential nature, indicate ownership, or indicate daily handling of objects. These relationships form a basis and other relationships can be derived from it. F"^^xsd:string ;
  rdfs:domain task:Object ;
  rdfs:label "used_by"^^xsd:string ;
  rdfs:range task:Agent ;
  rdfs:range task:Role ;
.
task:uses
  rdf:type owl:ObjectProperty ;
  rdfs:comment "The uses relationship specifies which object is used in executing the task and how it is used. The uses relationship typically changes the state of the object."^^xsd:string ;
  rdfs:domain task:Task ;
  rdfs:label "uses"^^xsd:string ;
  rdfs:range task:Object ;
.
