DialogueAct activity;
DialogueAct Introduction;
Child user;
DialogueAct myLastDA();
boolean firstEncounter();
int saidInSession(DialogueAct da);

// one line comment before introduction:
introduction:
if (! (activity <= Introduction)) return;

/*multi line comment
before initial_greeting:*/
initial_greeting:
if (user) {
  if (! myLastDA()) {
    propose("greeting") {
      salutation = firstEncounter() ? InitialGreeting : ReturnGreeting;
      /*multi line comment before DialogueAct*/
      DialogueAct da = emitDA(#^salutation(Meeting));

    ask_user_name:
      if (! user.GivenName && saidInSession(#Request(Name)) < 0) {
        // TODO: USE SAME LABELS IN GRAMMAR AND DATABASE
        // Max: ERROR? TODO: there is no Request(Name) DA!
        // make sure the next DA is only sent out after 900ms pause
        introduceDADelay(900);
        emitDA(#Request(Name));
      }
    }
  }
// one line comment at the end before the last closing bracket (last bracket in rudi file)
}